<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:orientation="vertical"
    tools:context=".Category2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/bungee"
            android:text="HOSTEL FACILITIES"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:transitionName="logo_text"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/bed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bed_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/bed"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="   One bed in each room"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/food"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/food_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/food"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="   Three times a day"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/wifi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wifi_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/wifi"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="   Available"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tv_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/tv"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="   Not Available"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/parking"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/garage_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/parking"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="   Own Parking Area"
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp">
        <Button
            android:id="@+id/firstList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Girls Hostels"
            android:textColor="@color/white"
            android:background="@drawable/customshap3"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/secondList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="Boys Hostels"
            android:textColor="@color/white"
            android:background="@drawable/customshap3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/backToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back To Home"
            android:textColor="@color/white"
            android:background="@color/black" />
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>